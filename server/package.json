{
    "name": "server",
    "version": "1.8.0",
    "private": true,
    "main": "./build/index.js",
    "prisma": {
        "seed": "ts-node -r tsconfig-paths/register --files src/database/seed.ts"
    },
    "scripts": {
        "start": "nodemon --exec \"npm run lint && ts-node -r tsconfig-paths/register --files src/index.ts\" ./src/index.ts",
        "start:production": "cross-env NODE_ENV=production TS_NODE_BASEURL=build/src node -r tsconfig-paths/register build/src/index.js",
        "build": "rimraf build && tsc",
        "test": "jest --config jest.config.js --runInBand --forceExit",
        "sync-env": "sync-dotenv",
        "db:restore": "prisma migrate dev",
        "lint": "eslint . --ext .js,.ts",
        "lint:fix": "eslint . --fix --ext .js,.ts",
        "format": "prettier --write **/*.{js,ts,json,css,scss,html}",
        "pre-commit": "npm run sync-env && git add .env.example && lint-staged"
    },
    "dependencies": {
        "@prisma/client": "^4.14.1",
        "axios": "^1.4.0",
        "bcryptjs": "^2.4.3",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "helmet": "^7.0.0",
        "http-status-codes": "^2.2.0",
        "jsonwebtoken": "^9.0.0",
        "lodash": "^4.17.21",
        "luxon": "^3.3.0",
        "ms": "^2.1.3",
        "uuid": "^9.0.0",
        "winston": "^3.9.0",
        "winston-daily-rotate-file": "^4.7.1",
        "zod": "^3.21.4"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/compression": "^1.7.2",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.1",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/lodash": "^4.14.195",
        "@types/luxon": "^3.3.0",
        "@types/ms": "^0.7.31",
        "@types/node": "^18.16.16",
        "@types/uuid": "^9.0.1",
        "@typescript-eslint/eslint-plugin": "^5.59.7",
        "@typescript-eslint/parser": "^5.59.7",
        "cross-env": "^7.0.3",
        "eslint": "^8.41.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^4.2.1",
        "jest": "^29.5.0",
        "lint-staged": "^13.2.2",
        "nodemon": "^2.0.22",
        "prettier": "^2.8.8",
        "prisma": "^4.14.1",
        "rimraf": "^5.0.1",
        "sync-dotenv": "^2.7.0",
        "ts-jest": "^29.1.0",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^4.9.5"
    },
    "lint-staged": {
        "*.{js,ts,tsx}": [
            "eslint --fix"
        ],
        "*.{json,css,scss,html}": [
            "prettier --write"
        ]
    }
}
